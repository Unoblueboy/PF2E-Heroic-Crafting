<section class="tab {{tab.cssClass}}"
         data-group="primary"
         data-tab="edit">
    <div class="standard-form material-form">
        <h4>Materials</h4>
        <div class="form-group">
            <label for="edit-material-trove-edit-current-materials">Current:</label>
            <div class="form-fields"
                 id="edit-material-trove-edit-current-materials">{{craftingMaterials.goldValue}} GP</div>
        </div>
        <div class="form-group">
            <label for="edit-material-trove-edit-new-materials">New:</label>
            <div class="form-fields"
                 id="edit-material-trove-edit-new-materials">{{craftingMaterials.goldValue}} GP</div>
        </div>
    </div>
    <hr style="margin:0.5rem 0;">
    <div class="standard-form">
        {{formGroup fields.editPP dataset=datasets.editPP label=(localize 'PF2E.CurrencyPP') value=craftingMaterials.coins.pp rootId=partId}}
        {{formGroup fields.editGP dataset=datasets.editGP label=(localize 'PF2E.CurrencyGP') value=craftingMaterials.coins.gp rootId=partId}}
        {{formGroup fields.editSP dataset=datasets.editSP label=(localize 'PF2E.CurrencySP') value=craftingMaterials.coins.sp rootId=partId}}
        {{formGroup fields.editCP dataset=datasets.editCP label=(localize 'PF2E.CurrencyCP') value=craftingMaterials.coins.cp rootId=partId}}
        <div></div>
    </div>
    <hr style="margin:0.5rem 0;">
    <div class="standard-form">
        {{formGroup fields.editUseCoins rootId=partId}}
        <div></div>
    </div>
</section>