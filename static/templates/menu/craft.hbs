<section class="tab {{tab.cssClass}}"
         data-group="{{tab.group}}"
         data-tab="{{tab.id}}">
    {{#if (gt projects.length 0)}}
        <ol class="project-list heroic-list">
            <li class="project-header heroic-header">
                <div class="project-header-name heroic-header-name">
                    Name
                </div>
                <div class="project-header-dc">
                    DC
                </div>
                <div class="project-header-progress">
                    Progress
                </div>
                <div class="project-header-quantity">
                    Quantity
                </div>
                <div class="project-header-buttons heroic-button-group">
                    <i class="fa-solid fa-fw fa-edit"></i>
                    <button disabled><i class="fa-fw fa-solid fa-hammer"
                           inert></i>Craft</button>
                    <i class="fa-solid fa-fw fa-trash"></i>
                </div>
            </li>
            {{#each projects as | project |}}
                <li class="project-item heroic-item"
                    data-project-id="{{project.id}}"
                    data-action="craft-project">
                    <div class="project-item-name heroic-item-name">
                        <img src="{{project.img}}">
                        <a data-action="toggle-summary">{{project.name}}</a>
                    </div>
                    <div class="project-item-dc">
                        {{project.dc}}
                    </div>
                    <div class="project-item-progress">
                        <span class="project-item-progress-value">{{project.value}}</span>
                        <span class="project-item-progress-sep">/</span>
                        <span class="project-item-progress-max">{{project.max}}</span>
                        <div class="project-item-progress-bar">
                            <div class="internal-bar base-bar start"
                                 style="width:{{project.percent}};"><span>{{project.percent}}</span></div>
                        </div>
                    </div>
                    <div class="project-item-quantity">
                        {{project.batchSize}}
                    </div>
                    <div class="project-item-buttons heroic-button-group">
                        <a data-project-action="edit"><i class="fa-solid fa-fw fa-edit"></i></a>
                        <button data-project-action="craft"><i class="fa-fw fa-solid fa-hammer"
                               inert></i>Craft</button>
                        <a data-project-action="delete"><i class="fa-solid fa-fw fa-trash"></i></a>
                    </div>
                    <div class="project-item-summary heroic-item-summary"
                         hidden></div>
                </li>
            {{/each}}
        </ol>
    {{else}}
        You have no ongoing projects
    {{/if}}
</section>