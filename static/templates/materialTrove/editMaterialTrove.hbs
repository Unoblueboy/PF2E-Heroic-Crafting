{{log "Heroic Crafting |" this}}
<section class="tab {{tab.cssClass}}"
         data-group="{{tab.group}}"
         data-tab="{{tab.id}}">
    {{> modules/pf2e-heroic-crafting/templates/materialTrove/materialSummary.hbs }}
    <hr>
    <div class="money-form">
        <div class="form-group">
            <label for="{{partId}}-{{tab.id}}-pp">{{localize 'PF2E.CurrencyPP'}}</label>
            <div class="form-fields">
                <input data-action="update-input-manual"
                       type="number"
                       name="{{tab.id}}.pp"
                       value={{curValue.pp}}
                       min="0"
                       step="1"
                       id="{{partId}}-{{tab.id}}-pp">
            </div>
        </div>
        <div class="form-group">
            <label for="{{partId}}-{{tab.id}}-gp">{{localize 'PF2E.CurrencyGP'}}</label>
            <div class="form-fields">
                <input data-action="update-input-manual"
                       type="number"
                       name="{{tab.id}}.gp"
                       value={{curValue.gp}}
                       min="0"
                       step="1"
                       id="{{partId}}-{{tab.id}}-gp">
            </div>
        </div>
        <div class="form-group">
            <label for="{{partId}}-{{tab.id}}-sp">{{localize 'PF2E.CurrencySP'}}</label>
            <div class="form-fields">
                <input data-action="update-input-manual"
                       type="number"
                       name="{{tab.id}}.sp"
                       value={{curValue.sp}}
                       min="0"
                       step="1"
                       id="{{partId}}-{{tab.id}}-sp">
            </div>
        </div>
        <div class="form-group">
            <label for="{{partId}}-{{tab.id}}-cp">{{localize 'PF2E.CurrencyCP'}}</label>
            <div class="form-fields">
                <input data-action="update-input-manual"
                       type="number"
                       name="{{tab.id}}.cp"
                       value={{curValue.cp}}
                       min="0"
                       step="1"
                       id="{{partId}}-{{tab.id}}-cp">
            </div>
        </div>
    </div>
    <hr>
    <div class="standard-form">
        <div class="form-group">
            <label for="{{partId}}-{{tab.id}}-updateActorCoins">Use Coins</label>
            <div class="form-fields">
                <input data-action="update-input-manual"
                       type="checkbox"
                       name="{{tab.id}}.updateActorCoins"
                       id="{{partId}}-{{tab.id}}-updateActorCoins"
                       {{#if updateActorCoins}}checked{{/if}}>
            </div>
            <p class="hint">If the new value of the material trove is greater than the current value, the difference
                will be removed from the actor&#39;s inventory. Otherwise, the difference will be added to the
                actor&#39;s inventory.</p>
        </div>
    </div>
</section>