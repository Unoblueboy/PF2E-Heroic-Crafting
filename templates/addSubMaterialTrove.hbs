<section class="tab {{tab.cssClass}}"
         data-group="primary"
         data-tab="add-sub">
    <div class="standard-form add-sub-form">
        <h4>Materials</h4>
        <div class="form-group">
            <label for="edit-material-trove-add-sub-current-materials">Current:</label>
            <div class="form-fields"
                 id="edit-material-trove-add-sub-current-materials">{{craftingMaterials.goldValue}} GP</div>
        </div>
        <div class="form-group">
            <label for="edit-material-trove-add-sub-new-materials">New:</label>
            <div class="form-fields"
                 id="edit-material-trove-add-sub-new-materials">{{craftingMaterials.goldValue}} GP</div>
        </div>
    </div>
    <hr style="margin:0.5rem 0;">
    <div class="standard-form">
        {{formGroup fields.addSubPP label=(localize 'PF2E.CurrencyPP') value=0 rootId=partId}}
        {{formGroup fields.addSubGP label=(localize 'PF2E.CurrencyGP') value=0 rootId=partId}}
        {{formGroup fields.addSubSP label=(localize 'PF2E.CurrencySP') value=0 rootId=partId}}
        {{formGroup fields.addSubCP label=(localize 'PF2E.CurrencyCP') value=0 rootId=partId}}
    </div>
    <hr style="margin:0.5rem 0;">
    <div class="standard-form">
        {{formGroup fields.addSubUseCoins rootId=partId}}
        <div></div>
    </div>
</section>